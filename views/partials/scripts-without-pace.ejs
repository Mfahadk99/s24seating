<script>
    // enable tooltip
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })

    /*------------------ Dynamic Active Class: Main Menu -------------------*/

    $(document).ready(function () {
        const originalUrl = window.location.pathname;
        if (!$(`#main-menu-navigation a[href='${originalUrl}']`).parent().html()) {
            var url = originalUrl;
            let urlPartials = originalUrl.split('/');
            // in case of X/x/id
            url = '/' + urlPartials[1];
            $(`#main-menu-navigation a[href='${url}']`).parent().addClass('active is-shown').parent().parent()
                .addClass('open');
        } else {
            $(`#main-menu-navigation a[href='${originalUrl}']`).parent().addClass('active is-shown').parent()
                .parent()
                .addClass('open');
        }

    });
</script>