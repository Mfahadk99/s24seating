<div class="modal fade" id="reservationModal" tabindex="-1" role="dialog" aria-labelledby="reservationModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationModalLabel">Complete Your
                    Reservation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="reservation-summary mb-4">
                    <h6>Reservation Details</h6>
                    <div class="d-flex align-items-center mb-2">
                        <i class="la la-users mr-2" style="width: 20px;"></i>
                        <span id="modal-party-size"></span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="la la-calendar mr-2" style="width: 20px;"></i>
                        <span id="modal-date"></span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="la la-clock-o mr-2" style="width: 20px;"></i>
                        <span id="modal-time"></span>
                    </div>
                </div>

                <form id="reservation-confirmation-form">
                    <input type="hidden" id="selected-table-id">
                    <input type="hidden" id="selected-start-time">
                    <input type="hidden" id="selected-end-time">
                    <input type="hidden" id="selected-slot-id">

                    <div class="form-group">
                        <label for="contact-name">Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="contact-name" placeholder="Your name" required>
                    </div>
                    <div class="form-group">
                        <label for="contact-email">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" id="contact-email" placeholder="Your email" required>
                    </div>
                    <div class="form-group">
                        <label for="reservationDate">Date <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" id="reservationDate" name="date" required>
                    </div>
                    <div class="form-group">
                        <label for="timeSlot">Time Slot <span class="text-danger">*</span></label>
                        <select class="form-control" id="timeSlot" name="slotId" required>
                            <option value="">Select time slot</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="contact-phone">Phone <span class="text-danger">*</span></label>
                        <input type="tel" class="form-control" id="contact-phone" placeholder="Your phone number"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="special-requests">Special Requests
                            (Optional)</label>
                        <textarea class="form-control" id="special-requests" rows="3"
                            placeholder="Any special requests or dietary requirements?"></textarea>
                    </div>

                    <div id="reservation-error" class="alert alert-danger" style="display: none;"></div>
                    <div id="reservation-success" class="alert alert-success" style="display: none;">Reservation
                        confirmed! We look forward to
                        serving you.</div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="complete-reservation" class="btn btn-primary">Complete Reservation</button>
            </div>
        </div>
    </div>
</div>